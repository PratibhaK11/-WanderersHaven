<% layout("/layouts/boilerplate") %>
<style>
  .card-body {
    padding: 0.75rem 0.5rem 0.5rem 0.75rem !important;
    background-color: #fff; /* Ensure background is white */
  }

  .btn-primary {
    background-color: orangered;
    border: none !important;
  }

  .btn-primary:hover {
    background-color: #ff6f61; 
  }

  .btn-outline-primary {
    border-color: orangered;
    color: orangered;
  }

  .btn-outline-primary:hover {
    background-color: orangered;
    color: whitesmoke;
  }

  .form-control {
    border: 1px solid orangered;
    border-radius: 0%;
  }

  .form-control:focus {
    border-color: orangered;
    box-shadow: 0 0 0 0.2rem rgba(255, 69, 0, 0.25);
  }

  .search-inp {
    border: 1px solid orangered;
    border-radius: 25px; 
    padding: 0.5rem 3rem 0.5rem 1rem;
    font-size: 0.8rem;
    text-align: center;
  }

  .card {
    border: 1px solid orangered; 
    border-radius: 0%; 
  }

  .card-title {
    color: orangered;
  }

  .btn-cancel {
    color: orangered;
    border: none;
    background: transparent;
    cursor: pointer;
  }

  .btn-cancel:hover {
    color: #ff6f61; 
  }

  .table th, .table td {
    border: 1px solid orangered; 
  }
</style>



  <div class="container mt-4">
    <div class="row">
      <div class="col-lg-3">
        <div class="card">
          <div class="card-body text-center">
            <h4 class="card-title mt-3">
              <%= user.username %>
            </h4>
            <p class="card-text mb-3">
              <%= user.email %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Update Profile</h5>
            <form action="/profile/update" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
              </div>
              <!-- Add more fields as needed -->
              <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Booking History</h5>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Listing</th>
                  <th>Date</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% bookings.forEach(function(booking, index) { %>
                  <tr>
                    <th scope="row">
                      <%= index + 1 %>
                    </th>
                    <td>
                      <%= booking.listing.title %>
                    </td>
                    <td>
                      <%= booking.bookingDate.toDateString() %>
                    </td>
                    <td>Confirmed</td>
                    <td>

                      <a href="/profile/bookings/delete/<%= booking._id %>" class="btn btn-outline-danger btn-sm"
                        onclick="return confirm('Are you sure you want to delete this booking?');">
                        <i class="fa-solid fa-trash"></i> Delete
                      </a>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
              </tbody>
            </table>
            <a href="/profile/bookings" class="btn btn-outline-primary btn-sm">See More</a>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Your Reviews</h5>
            <ul class="list-group">
              <% reviews.forEach(function(review) { %>
                <li class="list-group-item">
                  <strong>
                    <%= review.listingTitle %>
                  </strong>
                  <p>
                    <%= review.comment %>
                  </p>
                  <a href="/reviews/<%= review._id %>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
                  <a href="/reviews/<%= review._id %>/delete" class="btn btn-outline-danger btn-sm">Delete</a>
                </li>
                <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>