<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Support - Wanderer's Haven</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
        integrity="sha384-vA2qkSfMV0mZX8Ut8egW/D35pzs3jsLTnVjDrQhi3cuQvr3TM4oOVgldcFqTcS0v" crossorigin="anonymous">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            max-width: 800px;
            padding: 2rem;
        }

        .card {
            border: none;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            border-bottom: none;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .btn-create {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-create:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .ticket {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: box-shadow 0.3s ease;
        }

        .ticket:hover {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .ticket-info {
            margin-bottom: 1rem;
        }

        .ticket a {
            color: #007bff;
            text-decoration: none;
        }

        .ticket a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="py-5 text-center">
            <h1 class="mb-4">Customer Support</h1>
            <p class="lead">Welcome to Wanderer's Haven customer support. How can we assist you today?</p>
        </div>

        <!-- New Ticket Form -->
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="card-title">Create a New Ticket</h2>
            </div>
            <div class="card-body">
                <form action="/help" method="POST">
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject:</label>
                        <input type="text" class="form-control" id="subject" name="subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea class="form-control" id="description" name="description" rows="4"
                            required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-create">Submit</button>
                </form>
            </div>
        </div>

        <!-- Ticket List -->
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Your Generated Tickets</h2>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <% if (tickets && tickets.length > 0) { %>
                    <% tickets.forEach(ticket => { %>
                    <div class="col">
                        <div class="ticket">
                            <div class="ticket-info">
                                <p><strong>Reference Number:</strong> <%= ticket.referenceNumber %></p>
                                <p><strong>Status:</strong> <%= ticket.status %></p>
                                <p><strong>Created At:</strong> <%= ticket.createdAt.toDateString() %></p>
                            </div>
                            <a href="/help/tickets/<%= ticket._id %>" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                    <% }); %>
                    <% } else { %>
                    <p class="text-muted">No tickets found.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript (optional if not using advanced features) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-YuZw5yXb9uPE9zfln76p4v0WcCGub9vE3Qqoa2We1b6k/IwI5D0fIR4nb6N9vBOy"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
        integrity="sha384-vA2qkSfMV0mZX8Ut8egW/D35pzs3jsLTnVjDrQhi3cuQvr3TM4oOVgldcFqTcS0v"
        crossorigin="anonymous"></script>
</body>

</html>
