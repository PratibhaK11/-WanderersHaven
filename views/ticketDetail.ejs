<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">


    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            max-width: 800px;
            padding: 2rem;
        }

        .card {
            border: none;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            border-bottom: none;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .btn-back {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-back:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>


<body>
    <div class="container">
        <div class="py-5 text-center">
            <h1 class="mt-5">Ticket Details</h1>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h2 class="card-title">Ticket Information</h2>
            </div>
            <div class="card-body">
                <p><strong>Reference Number:</strong> <%= ticket.referenceNumber %></p>
                <p><strong>Status:</strong> <%= ticket.status %></p>
                <p><strong>Subject:</strong> <%= ticket.subject %></p>
                <p><strong>Description:</strong> <%= ticket.description %></p>
                <p><strong>Created At:</strong> <%= ticket.createdAt.toDateString() %></p>
                <a href="/help" class="btn btn-primary btn-back">Back to Tickets</a>
            </div>
        </div>
    </div>

   
</body>

</html>
